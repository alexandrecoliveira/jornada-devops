pipeline {
    agent any

    stages {

        stage ('Build Docker Image') {
            steps {
                script {
                    dockerapp = docker.build("coliveiraa/desafio-04-kubenews:${env.BUILD_ID}", '-f desafio-04/Dockerfile desafio-04/kube-news/src')
                }
            }            
        }

        stage ('Push Kube-News Image do DockerHub') {
            steps {
                docker.withRegistry('https://registry.hub.docker.com', 'usr_pwd_docker_hub') {
                    dockerapp.push('latest')
                    dockerapp.push("${env.BUILD_ID}")
                }
            }
        }

    }
}